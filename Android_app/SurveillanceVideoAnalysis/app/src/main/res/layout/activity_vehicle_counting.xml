<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2f333f"
    tools:context="com.suhas.jamesbond.VehicleCounting">


    <Button
        android:id="@+id/vehicle1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/fancybutton"
        android:text="NEW BEL ROAD"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/vehicle2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/fancybutton"
        android:text="MG ROAD"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/vehicle3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/fancybutton"
        android:text="MEKHRI CIRCLE"
        android:textColor="@android:color/white"/>

</RelativeLayout>